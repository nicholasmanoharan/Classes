#include "VideoGame.h"
#include <iostream>

VideoGame::VideoGame(const std::string& title, int year, const std::string& publisher, int rating)
    : Media(title, year), publisher(publisher), rating(rating) {}

void VideoGame::displayInfo() const {
    Media::displayInfo();
    std::cout << "Publisher: " << publisher << "\nRating: " << rating << std::endl;
}

bool VideoGame::search(const std::string& term) const {
    return Media::search(term) || (publisher.find(term) != std::string::npos) || (std::to_string(rating).find(term) != std::string::npos);
}

const std::string& VideoGame::getPublisher() const {
    return publisher;
}

int VideoGame::getRating() const {
    return rating;
}
